{
	"compilerOptions": {
		"target": "ES2020",
		"declaration": true,
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "ES2020",
		"rootDir": "./src/",
		"outDir": "./dist/types/"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/**/*.spec.ts"]
}
